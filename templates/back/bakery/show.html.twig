{% extends 'base.html.twig' %}

{% block title %}Ma boulangerie{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="display-6">Ma boulangerie
            <div class="d-flex align-items-center">
                <img
                    src="{{ bakery.picture }}"
                    alt=""
                    style="width:128px;height:128px;"
                    class="rounded-circle"
                />
            </div>
        </h1>

        <table class="table table-stripedb w-auto">
            <tbody>
                <tr>
                    <th>Nom</th>
                    <td>{{ bakery.name }}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ bakery.adress }}</td>
                </tr>
                <tr>
                    <th>Numéro de téléphone</th>
                    <td>{{ bakery.phone }}</td>
                </tr>
                <tr>
                    <th>Distance de livraison</th>
                    <td>{{ bakery.distance }}</td>
                </tr>
                <tr>
            </tbody>
        </table>

        <a href="{{ path('app_back_bakery_index', {'id': bakery.user.id}) }}">Retour à la liste</a>

        <a href="{{ path('app_back_bakery_edit', {'id': bakery.id}) }}">modifier</a>
    </div>
{% endblock %}
