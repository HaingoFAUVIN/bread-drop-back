{% extends 'base.html.twig' %}

{% block title %}Liste des commandes{% endblock %}

{% block body %}
    <h1  class="display-6" style="margin-left:100px;">Liste des commandes</h1>

    {# {{ include('_flash_messages.html.twig') }} #}

    <div class="table-responsive">
        <table  class="table table-stripedb w-auto" style="margin-left:100px;">
            <thead>
                <tr>
                    <th scope="col">N de commande</th>
                    <th scope="col">Statut</th>
                    <th scope="col">Livraison</th>
                    <th scope="col">Schedule</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
            {% for order in orders %}
                <tr>
                    <td scope="row">{{ order.id }}</td>

                    <td scope="row">
                        {% if order.status == '1' %}
                            En cours
                        {% else %}
                            Fini
                        {% endif %}
                    </td>

                    <td scope="row">
                        {% if order.status == '1' and order.delivery == '1' %}
                            A livrer
                        {% elseif order.status == '1' and order.delivery == '0' %}
                            A récupérer
                        {% endif %}
                    </td>
                
                    <td scope="row"> {{ order.schedule|format_datetime('short', 'short', locale='fr') }}</td>
                    <td scope="row">
                        <a href="{{ path('app_back_order_show', {'id': order.id}) }}"><button type="button" class="btn btn-secondary">Afficher</button></a>

                        <a href="#"><button type="button" class="btn btn-secondary">Archiver</button></a>
                        {# {{ path('app_back_order_archive', {'id': order.id}) }} #}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10">Pas de commandes trouvées</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {% endblock %}


