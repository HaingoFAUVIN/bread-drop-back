{% extends 'base.html.twig' %}

{% block title %}Fiche du produit{% endblock %}

{% block body %}
    <h1>Fiche du produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom du produit</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Stock du produit</th>
                <td>{{ product.stock }}</td>
            </tr>
            <tr>
                <th>Description du produit</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Photo du produit</th>
                <td>{{ product.picture }}</td>
            </tr>
            <tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_product_index', {'id': product.bakery.id}) }}">Retour a la liste</a>

    <a href="{{ path('app_back_product_edit', {'id': product.id}) }}">Modifier</a>

    {{ include('back/product/_delete_form.html.twig') }}
{% endblock %}
